type LoginResponse {
    token: String!
}

enum InputType {
    OPTION
    TEXT
    BOOLEAN
    SATISFACTION
}

enum SurveyAudenceKind {
    PUBLIC # PUBLIC is for all domains and open to any user of collecta
    DOMAIN # DOMAIN makes available the survey for all users in the current domain
    CLOSE # CLOSE only open the survey a determinated whitelist passed by the user
}

input QuestionCreator {
    title: String!
    description: String!
    kind: InputType!
    multiple: Boolean
    anonymous: Boolean
    options: [Pair!]
}

input SurveyTargetUsers {
    targetKind: SurveyAudenceKind!
    whitelist: [ID!]
}

input SurveyDomain {
    byID: ID
    byDomainName: String
}

input Pair {
    key: String!
    value: String!
}

input SurveyGenerator {
    title: String!
    description: String!
    tags: [String!]!
    questions: [QuestionCreator!]!
    target: SurveyTargetUsers!

    metadata: [Pair!]
    logic: String
    due: Time
}

type SuveyGenerationResult {
    how: Int!
    surveys: [Survey!]!
}

input DomainCreator {
    name: String!
    email: String!
    domain: String!
    collectaDomain: String!
    tags: [String!]
}

type LastSurveyState {
    lastQuestion: Question!
    percent: Float!
}